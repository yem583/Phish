<UserControl x:Class="Phish.Desktop.Wpf.UserControls.StandardHeaderLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phish.Desktop.Wpf.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControl">

    <StackPanel DataContext="{Binding ElementName=UserControl}" Orientation="Horizontal" HorizontalAlignment="Center">
        <Image VerticalAlignment="Center" Source="{Binding Icon}" Width="32" Height="32"/>
        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" TextWrapping="Wrap" Text="{Binding PageHeaderText}" FontWeight="Bold" FontSize="18" />
    </StackPanel>

</UserControl>
