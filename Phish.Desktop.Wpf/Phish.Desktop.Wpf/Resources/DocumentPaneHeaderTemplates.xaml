<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Colonial.Tests.Resources">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Images.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="RadDocumentPaneHeaderTemplate">
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding HeaderImageSource}" Width="16" Height="16"/>
            <TextBlock  Margin="5,0,0,0" Text="{Binding PageHeaderText}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>